<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="pet_kind" resource="default" engine="innodb"
           comment="Pet Kind Backend Table">
        <column xsi:type="int" name="entity_id" unsigned="true" nullable="false" identity="true"
                comment="Entity ID"/>
        <column xsi:type="varchar" name="name" length="255" nullable="false"
                comment="Name"/>
        <column xsi:type="text" name="description" nullable="true"
                comment="Description"/>
        <column xsi:type="timestamp" name="created_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Creation Time"/>
        <constraint xsi:type="primary">
            <column name="entity_id"/>
        </constraint>
        <constraint xsi:type="unique">
            <column name="entity_id"/>
        </constraint>
        <index indexType="btree">
            <column name="entity_id"/>
            <column name="name"/>
            <column name="created_at"/>
        </index>
    </table>
</schema>
